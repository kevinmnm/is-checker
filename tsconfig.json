{
   "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "removeComments": true,
      "preserveConstEnums": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true
   },
   "exclude": [
      "node_modules",
      "**/*.spec.ts"
   ]
}